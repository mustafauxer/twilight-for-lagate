    <style>
        html, body { background: #fff !important; }
    </style>

<style>
  /* ثبّت ألوان الزر باستخدام متغيرات مكوّن سلة */
  salla-add-product-button.sticky-product-bar__btn{
    --s-button-height: 54px;
    --s-button-radius: 12px;
    --s-button-bg: #000;            /* خلفية سوداء */
    --s-button-bg-hover: #111;      /* أغمق عند الهوفر */
    --s-button-color: #fff;         /* نص أبيض */
    --s-button-font-weight: 700;
    --s-button-text-transform: uppercase;
    --s-loader-color: #fff;
  }

  /* فالباك + إجبار اللون حتى لو المكوّن عامل disabled */
  salla-add-product-button.sticky-product-bar__btn::part(button){
    background:#000 !important;
    color:#fff !important;
    height:54px;
    border-radius:12px;
    font-weight:700;
    text-transform:uppercase;
    opacity:1 !important;        /* أمنع البهتان */
  }
  salla-add-product-button.sticky-product-bar__btn::part(button):hover{
    background:#111 !important;
  }
  /* في حال المكوّن يحط disabled أو aria-disabled */
  salla-add-product-button.sticky-product-bar__btn::part(button)[disabled],
  salla-add-product-button.sticky-product-bar__btn::part(button)[aria-disabled="true"]{
    background:#000 !important;
    color:#fff !important;
    opacity:1 !important;         /* خليه واضح */
    cursor:not-allowed;           /* بس يبان إنه غير قابل للضغط لو فعلاً غير متاح */
  }
</style>




